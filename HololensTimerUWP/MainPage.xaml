<Page
    x:Class="HololensTimerUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HololensTimerUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="284" Width="663">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="timeText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="00:00          " VerticalAlignment="Top" Height="150
                 " Width="653" RenderTransformOrigin="-0.004,0.271" TextChanged="textBox_TextChanged" FontSize="72" TextAlignment="Center"/>
        <Button x:Name="start" Content="Start" HorizontalAlignment="Left" Margin="0,150,0,0" VerticalAlignment="Top" Height="132" Width="327" FontSize="48" Click="button_Click"/>
        <Button x:Name="reset" Content="Reset" HorizontalAlignment="Left" Margin="332,150,0,0" VerticalAlignment="Top" Height="132" Width="331" RenderTransformOrigin="-0.69,-0.241" FontSize="48" Click="Reset_Click"/>

    </Grid>
</Page>
